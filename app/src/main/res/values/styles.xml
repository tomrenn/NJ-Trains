<resources>

   <style name="StopItemTextAppearance" parent="TextAppearance.AppCompat.Medium">
       <item name="android:fontFamily">sans-serif-light</item>
       <item name="android:textColor">@color/text_black</item>
   </style>

    <style name="StopStationButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="StationPickerOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
